<% include ../partials/header %>

<!-- <h4><%= currentUser %></h4> -->

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Places to explore</h1>
            <p>Enjoy the culture while you are here</p>       
            <p>
                <a class = "btn btn-primary btn-large" href="/places/new">Add new places you have visited</a>
            </p>
        </div>
    </header>
<hr>
    <div class="row text-center" style = "display:flex; flex-wrap:wrap;">
        <% places.forEach(function(places){ %>
        <div class="col-md-3 col-sm-6" style="width: 280px; height: 300px; padding: 15px;">
            <div class="thumbnail">
                <img src="<%= places.image %>" class="img-responsive" class="rounded" style="width: 300px; height: 200px;">
            <div class ="caption">
                    <h4><%= places.name %></h4>
            </div>
            <p>
                <a href = "/places/<%= places._id %>" class = "btn btn-primary">More info</a>
            </p>
        </div>           
    </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>