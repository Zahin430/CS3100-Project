<% include ../partials/header %>

<style>
#add {
    margin-top: 10px;
    margin-right: 1250px;

}

</style>

<!-- <h4><%= currentUser %></h4> -->
    <% if (currentUser && currentUser.isAdmin) { %>
        <h1>Welcome to administrative mode, <%= currentUser.username %></h1>
    <% } %>
<p>
    <a id = "add" class = "btn btn-primary btn-large" href="/places/new">Add new places you have visited</a>
</p>
    <div class="row text-center" style = "display:flex; flex-wrap:wrap;">
        <% places.forEach(function(places){ %>
        <div class="col-md-3 col-sm-6" style="width: 280px; height: 300px; padding: 15px;">
            <div class="thumbnail">
                <img src="<%= places.image %>" class="img-responsive" class="rounded" style="width: 300px; height: 200px;">
            <div class ="caption">
                    <h4><%= places.name %></h4>
            </div>
            <p>
                <a href = "/places/<%= places._id %>" class = "btn btn-primary">More info</a>
            </p>
        </div>           
    </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>