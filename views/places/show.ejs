<% include ../partials/header %>
<div class = "container">
    <div class = "row">
        <!-- <div class = "col-md-3">
            <p class = "lead">Destinations</p>
            <div class = "list-group">
                <li class = "list-group-item active">Info 1</li>
                <li class = "list-group-item">Info 2</li>
                <li class = "list-group-item">Info 3</li>
            </div>
        </div> -->
        <div class = "col-md-9">
            <div class = "thumbnail">
                <img class = "img-responsive" src = "<%= place.image %>">
                <div class = "caption-full">
                    <h4>
                        <a>
                            <%=place.name%>
                        </a>
                    </h4>
                        <p>
                            <%= place.description %> 
                        </p>
                    <p>
                        <em> Submitted By <%= place.author.username %> </em>
                    </p>
                </div>
                <% if (currentUser && place.author.id.equals(currentUser._id)) {
                %>
                    <a class="btn btn-warning" href="/places/<%= place._id %>/edit">Edit Place</a>    
                <% } %>
                    <form action="/places/<%=place._id %>?_method=DELETE" method="POST">
                        <input type="submit" class = "btn btn-danger" value = "Delete">
                    </form>
            </div>
            <div class = "well">
                <div class = "text-right">
                        <a class = "btn btn-success" href = "/places/<%= place._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% place.comments.forEach(function(comment){ %>
                    <div class = "row">
                        <div class = "col-md-12">
                            <%= comment.author.username %>
                            <span class = "pull-right">10 days ago</span>
                            <p>
                                <%=comment.text %>
                            </p>
                        </div>
                    </div>                     
                <% }) %> 
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>

